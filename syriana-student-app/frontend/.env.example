# Environment Configuration Template for Frontend
# Copy this file to .env and fill in your actual values

# ============================================
# API CONFIGURATION
# ============================================
# Backend API URL (no trailing slash)
REACT_APP_API_URL=http://localhost:5000

# For production (Heroku example)
# REACT_APP_API_URL=https://your-backend-app.herokuapp.com

# For production (Railway example)
# REACT_APP_API_URL=https://your-backend.railway.app

# ============================================
# APPLICATION CONFIGURATION
# ============================================
REACT_APP_NAME=Syriana Student Management System
REACT_APP_VERSION=1.0.0
REACT_APP_ENV=development

# ============================================
# FEATURES FLAGS (Optional)
# ============================================
REACT_APP_ENABLE_2FA=true
REACT_APP_ENABLE_EMAIL_VERIFICATION=false
REACT_APP_ENABLE_ANALYTICS=false

# ============================================
# PAGINATION
# ============================================
REACT_APP_DEFAULT_PAGE_SIZE=10
REACT_APP_MAX_PAGE_SIZE=50

# ============================================
# FILE UPLOAD
# ============================================
REACT_APP_MAX_FILE_SIZE=5242880
REACT_APP_ALLOWED_FILE_TYPES=.jpg,.jpeg,.png,.pdf

# ============================================
# ANALYTICS (Optional)
# ============================================
# REACT_APP_GA_TRACKING_ID=UA-XXXXXXXXX-X
# REACT_APP_SENTRY_DSN=https://xxxxx@sentry.io/xxxxx

# ============================================
# SOCIAL LINKS (Optional)
# ============================================
REACT_APP_FACEBOOK_URL=https://facebook.com/syriana
REACT_APP_TWITTER_URL=https://twitter.com/syriana
REACT_APP_LINKEDIN_URL=https://linkedin.com/company/syriana

# ============================================
# CONTACT INFORMATION
# ============================================
REACT_APP_SUPPORT_EMAIL=support@syriana.edu
REACT_APP_CONTACT_PHONE=+1-234-567-8900
